import("//build/config/chromeos/ui_mode.gni")

assert(is_chromeos_ash)

# TODO(b:367728392): Refactor graduation_manager to build as a component target.
static_library("graduation") {
  sources = [
    "graduation_manager.cc",
    "graduation_manager.h",
  ]

  public_deps = [ "//chrome/browser:browser_public_dependencies" ]

  deps = [
    "//ash",
    "//ash/constants",
    "//ash/webui/system_apps/public:system_web_app_type",
    "//base",
    "//chrome/browser/ash/system_web_apps",
    "//chrome/browser/profiles:profile",
    "//chrome/browser/ui/ash/shelf",
    "//chrome/browser/ui/ash/system_web_apps",
    "//chrome/browser/web_applications",
    "//components/prefs",
    "//components/session_manager/core",
  ]
}

source_set("browser_tests") {
  testonly = true

  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

  sources = [ "graduation_manager_browsertest.cc" ]

  deps = [
    ":graduation",
    "//ash/constants",
    "//base/test:test_support",
    "//chrome/browser/apps/app_service",
    "//chrome/browser/ash/profiles",
    "//chrome/browser/ash/system_web_apps",
    "//chrome/browser/ash/system_web_apps/test_support:test_support_ui",
    "//chrome/browser/profiles:profile",
    "//chrome/browser/ui",
    "//chrome/browser/ui/ash/system_web_apps",
    "//chrome/test:test_support",
    "//content/test:test_support",
    "//testing/gmock",
  ]
}
