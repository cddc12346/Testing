    testonly = true
    sources = [
      "account_capabilities_observer.cc",
      "account_capabilities_observer.h",
      "accounts_removed_waiter.cc",
      "accounts_removed_waiter.h",
      "live_test.cc",
      "live_test.h",
      "sign_in_test_observer.cc",
      "sign_in_test_observer.h",
      "signin_util.cc",
      "signin_util.h",
    ]
    public_deps = [
      ":test_accounts",
      "//base",
      "//chrome/browser",
      "//chrome/browser:browser_process",
      "//chrome/browser/sync",
      "//chrome/browser/ui:ui",
      "//chrome/browser/ui/webui/signin",
      "//chrome/test:test_support_ui",
      "//components/signin/core/browser",
      "//content/test:test_support",
      "//mojo/public/mojom/base",
      "//skia/public/mojom",
      "//testing/gmock",
      "//testing/gtest",
      "//ui/views:test_support",
    ]
  }
}

static_library("test_accounts") {
  testonly = true
  sources = [
    "test_accounts_util.cc",
    "test_accounts_util.h",
  ]
  public_deps = [ "//base" ]
}
